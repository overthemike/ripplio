{
  "name": "ripplio",
  "version": "0.0.5",
  "type": "module",
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "pnpm run clean && pnpm run build:types && pnpm run build:js",
    "build:types": "tsc --emitDeclarationOnly --declarationMap",
    "build:js": "tsup",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "clean": "rm -rf dist",
    "lint": "biome lint",
    "lint:fix": "biome lint --fix",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build",
    "bench": "vitest bench",
    "coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/overthemike/ripplio.git"
  },
  "bugs": {
    "url": "https://github.com/overthemike/ripplio/issues"
  },
  "homepage": "https://github.com/overthemike/ripplio",
  "directories": {
    "test": "tests"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "react": "^19.1.1",
    "tsup": "^8.5.0",
    "typescript": "~5.9.2",
    "valtio": "^2.1.7",
    "valtio-reactive": "^0.1.2",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  }
}
